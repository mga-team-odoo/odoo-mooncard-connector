<openerp>
<data>


<record id="mooncard_account_form" model="ir.ui.view">
    <field name="name">Mooncard Card Account Form</field>
    <field name="model">mooncard.account</field>
    <field name="arch"  type="xml">
        <form string="Moon Card Account">
            <group name="main">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </group>
            <notebook colspan="4">
                <page string="Cards">
                    <field name="card_ids">
                        <tree string="Cards">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </form>
    </field>
</record>

<record id="mooncard_account_tree" model="ir.ui.view">
    <field name="name">Mooncard Card Account Tree</field>
    <field name="model">mooncard.account</field>
    <field name="arch"  type="xml">
        <tree string="Moon Card Accounts">
            <field name="name"/>
            <field name="code"/>
            <field name="company_id" groups="base.group_multi_company"/>
        </tree>
    </field>
</record>

<record id="mooncard_account_search" model="ir.ui.view">
    <field name="name">Mooncard Card Account search view</field>
    <field name="model">mooncard.account</field>
    <field name="arch"  type="xml">
        <search string="Search Moon Card Accounts">
            <field name="name" string="Token Number, Short Name or User"
                filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
            <group name="groupby" string="Group By">
            </group>
        </search>
    </field>
</record>

<record id="mooncard_account_action" model="ir.actions.act_window">
    <field name="name">Moon Card Accounts</field>
    <field name="res_model">mooncard.account</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="mooncard_account_menu" action="mooncard_account_action"
    parent="account.menu_configuration_misc" sequence="110"/>

</data>
</openerp>
